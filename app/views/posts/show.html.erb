<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<h3>Categories: </h3>
<ul>
  <% @post.categories.each do |c| %>
    <li><%= c.name%> </li>
    <% end %>
</ul>


<h3> Comments: </h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.user.username %> <%= comment.content %></li>
    <% end %> 
    </ul> 

<h3>Existing Users: </h3> 
  <ul>
  <% @post.users.uniq.each do |user| %>
    <%= link_to user.username, user_path(user) %>
    <% end %>
  </ul>

<h3>Add Comment </h3>
  <ul>
    <li> <% form_for @post.comments.build do |f| %></li>
        <%= f.label :content %> 
        <%= f.text_field :content %>
        <h4> Select a User </h4>
       <%= f.collection_select :user, User.all, :id, :username %>
  <% end %>
  </ul>

  <h3> Create a User </h3>
  <% form_for @post.users.build do |f| %></li>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <% end %>


